<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <description>Account object hack + name variable</description>
    <environments>Default</environments>
    <interviewLabel>Record Channel Hack for Account Slack Channel ID {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Record Channel Hack for Account Slack Channel ID</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Create_RC_Swarm</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>demo_Slack_Record_Channel_ID__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>demo_Slack_Record_Channel_ID__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Account</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <description>runs the flow that creates the collab room and swarm. this will fail if youve never made a service cloud swarm in the org you care about.</description>
        <name>Create_RC_Swarm</name>
        <label>Create RC Swarm</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <flowName>AL_Record_Channel_Swarm_Component</flowName>
        <inputAssignments>
            <name>inputChannelSlackID</name>
            <value>
                <elementReference>$Record.demo_Slack_Record_Channel_ID__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inputRecordID</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>inputRecordName</name>
            <value>
                <elementReference>$Record.Name</elementReference>
            </value>
        </inputAssignments>
    </subflows>
</Flow>
